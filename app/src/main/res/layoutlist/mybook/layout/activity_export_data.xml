<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/export_bookbg"
    android:orientation="vertical">

    <include layout="@layout/include_common_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108.5dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white_littlerund"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:id="@+id/rl_selBook"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账本"
                android:textColor="@color/title_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/gray_arrow"
                android:drawablePadding="5dp"
                android:text="默认账本"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/split_line" />

        <RelativeLayout
            android:id="@+id/rl_selTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期限"
                android:textColor="@color/title_color"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/gray_arrow"
                android:drawablePadding="5dp"
                android:text="所有时间"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="发送导出文件到"
        android:textColor="@color/title_color"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white_littlerund"
        android:hint="请填写接受文件的邮箱地址"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/context_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvSend"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_selecter_littleround_blue_darkblue"
        android:gravity="center"
        android:text="确认发送"
        android:textColor="@color/white"
        android:textSize="@dimen/context_text" />

</LinearLayout>