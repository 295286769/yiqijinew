<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/books_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.yiqiji.money.modules.common.view.SelectableRoundedImageView
            android:id="@+id/books_bagroud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="5dp"
            app:sriv_left_top_corner_radius="5dp"
            app:sriv_right_bottom_corner_radius="5dp"
            app:sriv_right_top_corner_radius="5dp" />
        <!--  <ImageView
              android:id="@+id/books_bagroud"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:scaleType="centerCrop" />-->

        <ImageView
            android:id="@+id/select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/pingding_5"
            android:paddingTop="@dimen/pingding_5"
            android:scaleType="centerCrop"
            android:src="@drawable/book_selected"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_image"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="dfs"
            android:textColor="@color/white"
            android:textSize="@dimen/context_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/book_memeber_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_left_2"
            android:textColor="@color/white"
            android:textSize="@dimen/secondary_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#80333333"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/bookEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/book_edit"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/new_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/books_bagroud"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:src="@drawable/news"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/add_book_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:paddingTop="@dimen/margin_left_20"
            android:singleLine="true"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/context_text" />

    </RelativeLayout>

</LinearLayout>