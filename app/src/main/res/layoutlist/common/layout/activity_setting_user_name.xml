<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/activity_title_layout" />

    <include layout="@layout/item_split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/module_line"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@color/white"
            android:hint="输入新的昵称"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_left_15"
            android:paddingRight="@dimen/margin_left_15"
            android:singleLine="true"
            android:textSize="@dimen/context_text"></EditText>
    </LinearLayout>

</LinearLayout>