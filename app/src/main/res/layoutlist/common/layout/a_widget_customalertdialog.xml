<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@drawable/bg_littleround_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="title"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:maxHeight="400dp"
            android:text="content"
            android:textColor="@color/title_color"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLeftButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="取消"
                android:textColor="#4990DE"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_button"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#D8D8D8" />

            <TextView
                android:id="@+id/tvRightButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="确定"
                android:textColor="#4990DE"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_upgrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="25dp">

            <TextView
                android:id="@+id/tv_upVersion"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_selecter_littleround_blue_darkblue"
                android:gravity="center"
                android:text="立即升级"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_debunk"
                android:layout_width="107dp"
                android:layout_height="28dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_selector_littleround_gray_white_gray_darkgray"
                android:gravity="center"
                android:text="我要吐槽"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_leftIcon"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_leftIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_write_back" />

        <TextView
            android:id="@+id/tv_versionNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp"
            android:text="V1.50"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cancle"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cancle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_canle_dialog" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_cancle"
            android:layout_centerHorizontal="true"
            android:background="@color/white" />

    </RelativeLayout>


</RelativeLayout>
