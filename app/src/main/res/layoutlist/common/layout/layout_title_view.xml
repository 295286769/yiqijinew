<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:paddingEnd="16dip"
    android:paddingLeft="0dip"
    android:paddingRight="16dip"
    android:paddingStart="0dip">

    <ImageView
        android:id="@+id/layout_title_view_return"
        style="@style/title_get_back" />

    <TextView
        android:id="@+id/book_note_text"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@+id/layout_title_view_return"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/note_messae_bagroud"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_10"
        android:visibility="gone" />

    <TextView
        android:id="@+id/layout_title_view_return_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/layout_title_view_return"
        android:layout_toRightOf="@id/layout_title_view_return"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/context_color"
        android:textSize="@dimen/contexts_titel_text" />

    <TextView
        android:id="@+id/layout_title_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="30dip"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/pingding_5"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="@null"
        android:textColor="@color/new_text_color_1"
        android:textSize="@dimen/contexts_titel_text" />

    <RelativeLayout
        android:id="@+id/sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/layout_title_view_title"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/synchronization_bagroud" />

        <ImageView
            android:id="@+id/rote_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/synchronization" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/layout_title_view_title_img"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/layout_title_view_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="@null"
        android:textColor="@color/main_back"
        android:textSize="@dimen/text_15"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/layout_title_view_sencond_right_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/layout_title_view_right_img_btn"
        android:clickable="true"
        android:contentDescription="@null"
        android:paddingLeft="@dimen/margin_left_15"
        android:paddingRight="@dimen/margin_left_10"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/layout_title_view_right_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:contentDescription="@null"
        android:paddingLeft="@dimen/margin_left_10"
        android:paddingRight="@dimen/pingding_5"
        android:visibility="gone" />

    <TextView
        android:id="@+id/message_note_text"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignRight="@+id/layout_title_view_right_img_btn"
        android:layout_marginTop="10dp"
        android:background="@drawable/note_messae_bagroud"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_10"
        android:visibility="gone"

        />

    <com.yiqiji.money.modules.common.view.NotesView
        android:id="@+id/notes"
        android:layout_width="@dimen/notes_radios"
        android:layout_height="@dimen/notes_radios"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_left_10"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layou_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/layout_title_view_right_img_btn"
        android:layout_below="@+id/layout_title_view_right_img_btn"
        android:orientation="vertical"
        android:visibility="gone" />

</RelativeLayout>