<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/unlogin_prompt_bagroun_color"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/margin_left_10" >

    <TextView
        style="@style/text_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unlongin_prompt_text" />

    <TextView
        android:id="@+id/login_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_left_10"
        android:paddingRight="@dimen/margin_left_10"
        android:text="@string/longin_right"
        android:textColor="@color/main_back"
        android:textSize="@dimen/text_13" />

</LinearLayout>