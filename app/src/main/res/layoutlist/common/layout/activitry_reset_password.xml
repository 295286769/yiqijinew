<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/activity_title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center_vertical"
        android:background="@color/split_line"></View>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:background="@color/white">

        <EditText
            android:id="@+id/ed_old_pwd_ac_reset_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/margin_left_15"
            android:paddingRight="@dimen/margin_left_15"
            android:paddingTop="10dp"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/iv_show_old_pwd_ac_reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_15"
            android:src="@drawable/close_eyes" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_left_15"
        android:background="@color/split_line"></View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:background="@color/white">

        <EditText
            android:id="@+id/ed_new_pwd_ac_reset_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/margin_left_15"
            android:paddingRight="@dimen/margin_left_15"
            android:paddingTop="10dp"
            android:textSize="@dimen/text_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_left_15"
        android:background="@color/split_line"></View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:background="@color/white">

        <EditText
            android:id="@+id/ed_confirm_pwd_ac_reset_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请确认您的密码"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/margin_left_15"
            android:paddingRight="@dimen/margin_left_15"
            android:paddingTop="10dp"
            android:textSize="@dimen/text_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_left_15"
        android:background="@color/split_line"></View>

    <Button
        android:id="@+id/btn_comfirm_ac_reset_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_left_15"
        android:layout_marginTop="20dp"
        android:background="@drawable/send_out_message"
        android:text="修改密码"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />


</LinearLayout>