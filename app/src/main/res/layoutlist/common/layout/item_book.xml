<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/black_commonly"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/iv_itembook"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:src="@drawable/gray_ordinary" />

    <TextView
        android:id="@+id/tv_itembook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_itembook"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxEms="4"
        android:singleLine="true"
        android:text="一般"
        android:textColor="@color/viewpage_item_text"
        android:textSize="@dimen/text_13" />

    <ImageView
        android:id="@+id/iv_with_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_itembook"
        android:layout_alignRight="@+id/iv_itembook"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:src="@drawable/with_more_expenditure" />

</RelativeLayout>