<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_withdrawals_card"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_withdrawals_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:layout_marginStart="@dimen/margin_left_15"
            android:src="@drawable/capital" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_withdrawals_card"
            android:layout_toRightOf="@id/iv_withdrawals_card"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="中国银行"
                android:textColor="@color/new_text_color_1"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/bno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尾号8878"
                android:textColor="@color/new_text_color_2"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_select"
            android:layout_width="@dimen/size_image_18"
            android:layout_height="@dimen/size_image_18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_15"
            android:src="@drawable/select"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_left_15"
        android:background="@color/split_line" >
    </View>

</LinearLayout>