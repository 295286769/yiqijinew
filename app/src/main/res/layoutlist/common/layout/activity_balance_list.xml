<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@drawable/bg_selecter_white_darkwhite"
        android:paddingLeft="@dimen/margin_left_15">

        <ImageView
            android:id="@+id/left_down"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pingding_5"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/left_down" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/image"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="一般"
            android:textColor="@color/context_color"
            android:textSize="@dimen/context_text" />

        <TextView
            android:id="@+id/balance_pesent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="15.0"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_15"
            android:text="一般"
            android:textColor="@color/context_color"
            android:textSize="@dimen/context_text" />
    </RelativeLayout>

    <include layout="@layout/item_split_line_margin" />

</LinearLayout>