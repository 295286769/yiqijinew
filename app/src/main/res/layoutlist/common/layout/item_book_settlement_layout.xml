<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relayout_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_selecter_white_darkwhite"
        android:descendantFocusability="afterDescendants"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_left_15"
        android:paddingRight="@dimen/margin_left_15"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/bill_settlementUserIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/group_settlement"/>

        <TextView
            android:id="@+id/tv_settlementInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bill_settlementUserIcon"
            android:ellipsize="end"
            android:text="晓龙执行了全员结算"
            android:textColor="@color/title_color"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        style="@style/dividing_line_style"
        android:layout_marginTop="4dp"
        ></View>
</LinearLayout>