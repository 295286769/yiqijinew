<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_radius5_white"
        android:minHeight="100dp" >

        <TextView
            android:id="@+id/text"
            style="@style/user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="修改名片"
            android:textSize="@dimen/text_18" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/text"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/margin_left_10"
            android:layout_marginTop="10dp"
            android:background="@color/background_color"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />

        <View
            android:id="@+id/view_chang"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@id/editName"
            android:layout_marginTop="15dp"
            android:alpha="0.3"
            android:background="@color/dialog_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_below="@id/view_chang"
            android:gravity="center" >

            <Button
                android:id="@+id/change_cancels"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="false"
                android:textColor="@color/expenditure_income_button_color" />

            <View
                android:layout_width="0.8dip"
                android:layout_height="fill_parent"
                android:alpha="0.3"
                android:background="@color/dialog_line_color" />

            <Button
                android:id="@+id/comit_change_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/expenditure_income_button_color" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>