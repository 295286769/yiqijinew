<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="8dp"
        >

        <RadioGroup
            android:id="@+id/rg_host"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/dialog_capital_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_capital_true"
                android:button="@null"
                android:gravity="center"
                android:text="全部"
                android:textColor="@drawable/dialog_select_text_color"/>

            <RadioButton
                android:id="@+id/dialog_capital_expenditure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_capital_false"
                android:button="@null"
                android:gravity="center"
                android:text="支出"
                android:textColor="@drawable/dialog_select_text_color"/>


            <RadioButton
                android:id="@+id/dialog_capital_income"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_capital_false"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="排行"
                android:textColor="@drawable/dialog_select_text_color"/>
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>