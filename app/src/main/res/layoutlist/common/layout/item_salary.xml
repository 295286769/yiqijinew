<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="158dip"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_left_15"
        android:layout_marginTop="14dip"
        android:background="@drawable/item_salary"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.35"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_item_salary_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="2016-09-13"
                android:textColor="@color/new_text_color_2" />

            <ImageView
                android:id="@+id/iv_item_salary_grant_wages"
                android:layout_width="wrap_content"
                android:layout_height="16dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="3dip"
                android:layout_marginRight="3dip"
                android:contentDescription="@null"
                android:scaleType="fitEnd"
                android:src="@drawable/grant_wages" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_item_salary_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dip"
                android:text="发放薪资"
                android:textColor="@color/new_text_color_1"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tv_item_salary_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_item_salary_money_text"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/tv_item_salary_money_text"
                android:layout_toRightOf="@id/tv_item_salary_money_text"
                android:text="12000元"
                android:textColor="@color/new_text_color_1"
                android:textSize="@dimen/text_20" />

            <TextView
                android:id="@+id/tv_item_salary_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_salary_money_text"
                android:layout_marginEnd="@dimen/margin_left_15"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/margin_left_15"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/item_salary_text"
                android:textColor="@color/new_text_color_2"
                android:textSize="@dimen/text_14" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>