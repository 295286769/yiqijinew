<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/dialog_bg_radius5_white"
    android:orientation="vertical" >
    
	<TextView 
	    android:id="@+id/tv_title_dialog_like_ios"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:text="确认手机号码"
	    android:textSize="15sp"
	    android:textColor="#000"
	    />
	<TextView 
	    android:id="@+id/tv_content_dialog_like_ios"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginBottom="10dp"
	    android:gravity="center"
	    android:text="我们将发送验证短信到这个号码\n"
	    android:textColor="@color/deep_gray"
	    />
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="0.1dp"
	    android:background="@color/light_gray"
	    />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <Button 
	        android:id="@+id/btn_cancel_dialog_like_ios"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="取消"
		    android:textColor="#0F81FF"
		    android:textSize="15sp"
		   	android:background="@drawable/dialog_bg_radius5_white"
	    />
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        
	        >
	        <View
			    android:layout_width="0.1dp"
			    android:layout_height="fill_parent"
			    android:background="@color/light_gray"
			    />
	        <Button 
	            android:id="@+id/btn_got_dialog_like_ios"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="好"
			    android:textColor="#0F81FF"
			    android:textSize="15sp"
			   	android:background="@drawable/dialog_bg_radius5_white"
		    	/>
	    </LinearLayout>
	</LinearLayout>
	
</LinearLayout>
