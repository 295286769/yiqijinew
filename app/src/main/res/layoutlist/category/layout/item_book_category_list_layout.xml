<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/img_indicator"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:src="@drawable/ic_indicator_down_14_26" />

    <ImageView
        android:id="@+id/img_category_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:scaleType="fitCenter"
        android:layout_toRightOf="@id/img_indicator"
        />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/img_category_icon"
        android:text="购物"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/img_more_operation"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_operation_53_9" />

    <View
        android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="0.2px"
        android:layout_alignParentBottom="true"
        android:background="@color/secondary_title_color"
        >
    </View>

<!--    <View
        android:layout_width="match_parent"
        android:layout_height="0.2px"
        android:layout_alignParentTop="true"
        android:background="@color/secondary_title_color"
        >
    </View>-->

</RelativeLayout>